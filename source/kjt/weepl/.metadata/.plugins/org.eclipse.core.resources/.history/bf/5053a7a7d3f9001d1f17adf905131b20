사용자 스크립트 추가
<th:block layout:fragment="script">
	<script th:inline="javascript">
		$(document).ready(function() {
			$("#searchBtn").on("click", function(e) {
				e.preventDefault();
				page(0);
			});
		});

		function page(page) {
			var searchDateType = $("#searchDateType").val();
			var searchBy = $("#searchBy").val();
			var searchQuery = $("#searchQuery").val();

			location.href = "/mhinfo/mhinfos/" + page
					+ "?searchDateType=" + searchDateType + "&searchBy="
					+ searchBy + "&searchQuery=" + searchQuery;
		}
	</script>
</th:block>

사용자 CSS 추가
<th:block layout:fragment="css">
	<style>
select {
	margin-right: 10px;
}
</style>
</th:block>

<meta charset="UTF-8">

<div layout:fragment="content">

	<form th:action="@{'/mhinfos/' + ${mhinfos.number}}" role="form"
		method="get" th:object="${mhinfos}">

		<table class="table">
			<thead>
				<tr>
					<td>썸네일</td>
					<td>제목</td>
					<td>등록자</td>
					<td>등록일</td>
					<td>조회수</td>
					<td>수정/삭제</td>
				</tr>
			</thead>
			<tbody>
				<tr th:each="mhinfo, status: ${mhinfos.getContent()}">
				<td class="repImgDiv">
					<a th:href="'/mhinfo/mhinfo/'+${mhinfo.cd}"><img
						th:src="${mhinfo.articleMhinfos[0].imgUrl}" class="rounded repImg" height="250" width="200">
					</a></td>
					<td><a th:href="'/mhinfo/mhinfo/'+${mhinfo.cd}"
						th:text="${mhinfo.title}"></a></td>
					<td th:text="${mhinfo.createdBy}"></td>
					<td
						th:text="${#temporals.format(mhinfo.regDt, 'yyyy-MM-dd HH:mm:ss')}"></td>
					<td th:text="${mhinfo.view}"></td>
					
				</tr>
			</tbody>
		</table>
		<div>
			

			<div
				th:with="start=${(mhinfos.number/maxPage)*maxPage + 1}, end=(${(mhinfos.totalPages == 0) ? 1 : (start + (maxPage - 1) < mhinfos.totalPages ? start + (maxPage - 1) : mhinfos.totalPages)})">
				<ul class="pagination justify-content-center">

					<li class="page-mhinfo"
						th:classappend="${mhinfos.first}?'disabled'"><a
						th:onclick="'javascript:page(' + ${mhinfos.number - 1} + ')'"
						aria-label='Previous' class="page-link"> <span
							aria-hidden='true'>Previous</span>
					</a></li>
					<li class="page-mhinfo"
						th:each="page: ${#numbers.sequence(start, end)}"
						th:classappend="${mhinfos.number eq page-1}?'active':''"><a
						th:onclick="'javascript:page(' + ${page - 1} + ')'"
						th:inline="text" class="page-link">[[${page}]]</a></li>
					<li class="page-mhinfo" th:classappend="${mhinfos.last}?'disabled'">
						<a th:onclick="'javascript:page(' + ${mhinfos.number + 1} + ')'"
						aria-label='Next' class="page-link"> <span aria-hidden='true'>Next</span>
					</a>
					</li>
				</ul>
			</div>

			<div class="form-inline justify-content-center"
				th:object="${mhinfoSearchDto}">
				<select th:field="*{searchDateType}" class="form-control"
					style="width: auto;">
					<option value="all">전체기간</option>
