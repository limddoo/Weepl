package com.weepl.repository;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.querydsl.QuerydslPredicateExecutor;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.weepl.constant.MemberStatus;
import com.weepl.entity.Member;

@Repository
public interface MemberRepository extends JpaRepository<Member, Long>, QuerydslPredicateExecutor<Member> {
	Member findByEmail(String email);
	Member findById(String id);
	Member findByCd(Long cd);
	
	Member save(Member member);
	
	Optional<Member> findMemberByCd(Long cd);
	Optional<Member> findByName(String name);
	List<Member> findAll();
	
	@Modifying
	@Query("UPDATE Member m SET m.status = :status, m.memberRestrict = null WHERE m.cd = :cd")
	void updateMemberStatus(@Param("cd") Long cd, @Param("status") MemberStatus status);
}
